{
  "name": "memorymapfor8bitcomputer",
  "version": "1.0.0",
  "description": "memory map for 8 bit computer",
  "main": "index.js",
  "scripts": {
    "start": "webpack serve --mode development --open --hot",
    "build": "webpack --mode production",
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "prettier --write package.json '{config,scripts,src,test}/**/*.{js,jsx,ts,tsx,json,css,md}'",
    "lint": "eslint --fix '{config,scripts,src,test}/**/*.{js,jsx,ts,tsx}'"
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "plugin:jest/recommended",
      "prettier",
      "prettier/react",
      "prettier/standard",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "env": {
      "browser": true,
      "node": true,
      "jest": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "strict": [
        2,
        "never"
      ],
      "babel/new-cap": 1,
      "consistent-return": 0,
      "no-confusing-arrow": 0,
      "no-return-assign": 0,
      "no-unused-expressions": 0,
      "import/no-named-as-default": 1,
      "import/prefer-default-export": 1,
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "js": "never",
          "jsx": "never",
          "ts": "never",
          "tsx": "never"
        }
      ],
      "react/destructuring-assignment": [
        1,
        "always",
        {
          "ignoreClassFields": true
        }
      ],
      "react/jsx-uses-react": 2,
      "react/jsx-uses-vars": 2,
      "react/react-in-jsx-scope": 2,
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".jsx",
            ".tsx"
          ]
        }
      ],
      "jest/no-disabled-tests": 1,
      "jest/no-focused-tests": 2,
      "jest/no-identical-title": 2,
      "jsx-a11y/label-has-associated-control": [
        2,
        {
          "controlComponents": [
            "Button",
            "Input",
            "CheckBox",
            "DropdownSelect",
            "Textarea"
          ],
          "depth": 3
        }
      ],
      "jsx-a11y/label-has-for": 0,
      "@typescript-eslint/no-empty-function": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/camelcase": "off",
      "@typescript-eslint/no-var-requires": "off",
      "@typescript-eslint/interface-name-prefix": "off",
      "@typescript-eslint/class-name-casing": "warn",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "error",
      "react/jsx-pascal-case": "warn"
    },
    "settings": {
      "react": {
        "version": "^16.8.6"
      },
      "import/resolver": {
        "typescript": {}
      }
    },
    "plugins": [
      "babel",
      "react",
      "jest",
      "prettier",
      "react-hooks",
      "@typescript-eslint"
    ],
    "overrides": [
      {
        "files": [
          "*.test*.ts?(x)"
        ],
        "rules": {
          "@typescript-eslint/no-non-null-assertion": 0
        }
      }
    ]
  },
  "author": "James Smith",
  "license": "MIT",
  "dependencies": {
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "blockly": "^5.20210325.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-react": "^7.12.13",
    "babel-loader": "^8.2.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-react-app": "^5.2.0",
    "eslint-loader": "^3.0.3",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-flowtype": "^4.6.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jest": "^23.19.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^4.1.2",
    "html-webpack-plugin": "^5.3.1",
    "prettier": "^2.0.5",
    "webpack": "^5.25.0",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2"
  }
}
